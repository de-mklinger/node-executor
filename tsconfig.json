{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/__tests__/**",
    "**/__mocks__/**"
  ],
  "compilerOptions": {
    "target": "ES2021",
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
